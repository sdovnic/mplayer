menu=no

# vo=directx is the default for pre-Vista OSes
# vo=gl:yuv=2 is the default for Vista+
vo=gl:yuv=2
#vo=direct3d

# Enable stylized subtitles
ass=yes
embeddedfonts=yes
#ass-force-style=Fontname=Calibri,Fontsize=30,PrimaryColour=&H00ffffff,BorderStyle=0
ass-styles="C:\Portable\mplayer\mplayer\mplayer\styles.ass"

# Passthrough in der MPlayer-Konfigurationsdatei aktivieren:
# Für nur AC3, benutze ac=hwac3,
# Für nur DTS, benutze ac=hwdts,
# Für AC3 und DTS, benutze afm=hwac3
#afm=hwac3,hwdts,ffmlp
#ac=hwac3,hwdts,ffmlp

# AC3 zu Stereo
# -channels 2 -af volume=40
channels=2
#volume=100

# Software Volume or softvol adjusts you volume using software amplification,
# not your sound cards hardware volume
