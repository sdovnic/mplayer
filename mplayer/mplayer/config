# 'direct rendering' is useless and only causes problems
dr=no

# Allows taking screenshots with 's'
vf=screenshot

# Enable colored console output
msgcolor=yes

msglevel=all=4

cache=8192

slang=ger,eng,und
alang=ger,jpn,eng,und

